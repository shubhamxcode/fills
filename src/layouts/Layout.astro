---
import { ClientRouter } from "astro:transitions";
import Analytics from "@vercel/analytics/astro";
import { SEO } from "astro-seo";
import Background from "../components/ui/Background.astro";
import Footer from "../components/ui/Footer.astro";
import Header from "../components/ui/Header.astro";
import "../styles/global.css";

interface Props {
  title: string;
  bgColor?: string;
  primaryBallColor?: string;
  secondaryBallColor?: string;
  gridColor?: string;
  diagonalColor?: string;
  vignetteColor?: string;
}

const {
  title,
  bgColor = "#0F1115",
  primaryBallColor,
  secondaryBallColor,
  gridColor,
  diagonalColor,
  vignetteColor,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <SEO
      title={title}
      titleTemplate="%s - Fills AI"
      description="Revolutionizing form filling with AI. Automate your document processing and form completion with advanced artificial intelligence."
      canonical="https://fills.ai/"
      noindex={false}
      nofollow={false}
      openGraph={{
        basic: {
          title: title || "Fills AI - Intelligent Form Automation",
          type: "website",
          image: "/fills-preview.png",
          url: "https://fills.ai/",
        },
        optional: {
          locale: "en_US",
          siteName: "Fills AI",
          description:
            "Transform your document workflow with Fills AI. Our intelligent system automates form filling, saving time and reducing errors across your organization.",
        },
        image: {
          alt: "Fills AI Platform Preview",
          width: 1200,
          height: 630,
          type: "image/png",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@fillsai",
        creator: "@nithinmanupati",
        title: title || "Fills AI - Intelligent Form Automation",
        description:
          "Experience the future of form filling with AI-powered automation.",
        image: "/fills-preview.png",
        imageAlt: "Fills AI Platform Preview",
      }}
      extend={{
        meta: [
          { name: "twitter:image", content: "/fills-preview.png" },
          { name: "twitter:title", content: title },
          {
            name: "twitter:description",
            content:
              "Transform your document workflow with Fills AI. Our intelligent system automates form filling, saving time and reducing errors.",
          },
          { name: "theme-color", content: bgColor },
          { name: "apple-mobile-web-app-capable", content: "yes" },
          { name: "apple-mobile-web-app-status-bar-style", content: "black" },
          { name: "author", content: "Nithin Manupati" },
          {
            name: "keywords",
            content:
              "fills ai, form automation, document processing, ai forms, intelligent form filling, automated documentation, business automation, ai technology, document management",
          },
        ],
        link: [
          {
            rel: "canonical",
            href: "https://fills.ai/",
          },
          { rel: "icon", type: "image/png", href: "/favicon.png" },
          { rel: "apple-touch-icon", href: "/apple-touch-icon.png" },
        ],
      }}
    />
    <title>{title}</title>
    <ClientRouter />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://api.fontshare.com/v2/css?f[]=cal-sans@400,500,600&display=swap"
      rel="stylesheet"
    />
    <Analytics />
  </head>
  <body
    class="m-0 min-h-screen relative font-sans"
    style={`background-color: ${bgColor}`}
  >
    <Background
      primaryBallColor={primaryBallColor}
      secondaryBallColor={secondaryBallColor}
      gridColor={gridColor}
      diagonalColor={diagonalColor}
      vignetteColor={vignetteColor}
    />
    <Header />
    <slot />
    <div class="mb-32">
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
</style>

---
import { home } from "../../data/site";
import { frameworks } from "../../data/navigation";
import { Icon } from 'astro-icon/components'
---

<section class="relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-32 pb-12 md:pt-40 md:pb-20">
      <div class="text-center pb-12 md:pb-16">
        <p class="text-xl text-purple-500 mb-4" data-aos="zoom-y-out">
          Fills AI
        </p>
        <h1 
          class="text-5xl md:text-6xl font-extrabold leading-tighter tracking-tighter mb-4" 
          data-aos="zoom-y-out"
          style="background: linear-gradient(to right, #c084fc, #818cf8, #38bdf8);
                 -webkit-background-clip: text;
                 -webkit-text-fill-color: transparent;
                 background-clip: text;"
        >
          {home.title}
        </h1>
        <div class="max-w-3xl mx-auto">
          <p class="text-xl text-gray-400 mb-8" data-aos="zoom-y-out" data-aos-delay="150">
            {home.description}
          </p>
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center w-full">
              <!-- Free Consultation Button -->
              <a 
                  href="#contact" 
                  class="group relative w-full sm:w-auto p-4 bg-gray-900/50 backdrop-blur-sm rounded-xl 
                  border border-gray-800/50 hover:border-purple-500/50 transition-all duration-300 
                  hover:shadow-[0_0_30px_-12px_rgba(168,85,247,0.5)]
                  flex items-center justify-center gap-4"
              >
                  <div class="flex-1 text-center sm:text-left">
                      <span class="text-xl font-bold text-white group-hover:text-purple-400 transition-colors">
                          Free Consultation
                      </span>
                  </div>
                  <div class="opacity-0 group-hover:opacity-100 transition-all duration-300">
                      <svg 
                          xmlns="http://www.w3.org/2000/svg" 
                          width="20" 
                          height="20" 
                          viewBox="0 0 24 24" 
                          fill="none" 
                          stroke="currentColor" 
                          stroke-width="2" 
                          stroke-linecap="round" 
                          stroke-linejoin="round" 
                          class="text-purple-400"
                      >
                          <path d="M5 12h14"></path>
                          <path d="m12 5 7 7-7 7"></path>
                      </svg>
                  </div>
              </a>

              <!-- Learn More Button -->
              <a 
                  href="#features" 
                  class="group relative w-full sm:w-auto p-4 bg-gray-900/50 backdrop-blur-sm rounded-xl 
                  border border-gray-800/50 hover:border-purple-500/50 transition-all duration-300 
                  hover:shadow-[0_0_30px_-12px_rgba(168,85,247,0.5)]
                  flex items-center justify-center gap-4"
              >
                  <div class="flex-1 text-center sm:text-left">
                      <span class="text-xl font-bold text-white group-hover:text-purple-400 transition-colors">
                          Learn More
                      </span>
                  </div>
                  <div class="opacity-0 group-hover:opacity-100 transition-all duration-300">
                      <svg 
                          xmlns="http://www.w3.org/2000/svg" 
                          width="20" 
                          height="20" 
                          viewBox="0 0 24 24" 
                          fill="none" 
                          stroke="currentColor" 
                          stroke-width="2" 
                          stroke-linecap="round" 
                          stroke-linejoin="round" 
                          class="text-purple-400"
                      >
                          <path d="M5 12h14"></path>
                          <path d="m12 5 7 7-7 7"></path>
                      </svg>
                  </div>
              </a>
          </div>
        </div>
      </div>

      <!-- Stats -->
      {home.stats && (
        <div class="max-w-3xl mx-auto mt-12">
          <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
            {home.stats.map((stat) => (
              <div class="text-center">
                <div class="text-3xl font-bold" style="background: linear-gradient(to right, #60a5fa, #3b82f6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                  {stat.value}
                </div>
                <div class="text-sm text-gray-400">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<style>
    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(-10px, 10px); }
    }

    @keyframes gradient-x {
        0%, 100% { background-size: 200% 100%; background-position: left center; }
        50% { background-position: right center; }
    }

    @keyframes fade-up {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    .animate-gradient-x {
        animation: gradient-x 15s ease infinite;
    }

    .animate-float {
        animation: float 8s ease-in-out infinite;
    }

    .animate-fade-up {
        animation: fade-up 1s ease forwards;
    }

    .animation-delay-100 {
        animation-delay: 100ms;
    }

    .animation-delay-200 {
        animation-delay: 200ms;
    }

    .animation-delay-300 {
        animation-delay: 300ms;
    }

    .animation-delay-400 {
        animation-delay: 400ms;
    }

    .animation-delay-1000 {
        animation-delay: 1000ms;
    }

    div {
        perspective: 1000px;
    }
    
    a {
        transform: translateZ(0);
        transition: transform 0.3s ease;
    }
    
    a:hover {
        transform: translateZ(20px);
    }
</style>
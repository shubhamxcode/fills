---
import { home } from "../../data/site";
import { frameworks } from "../../data/navigation";
import { Icon } from 'astro-icon/components'
---

<section class="relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-32 pb-12 md:pt-40 md:pb-20">
      <div class="text-center pb-12 md:pb-16">
        <!-- Mobile View (Hidden on larger screens) -->
        <div 
          class="md:hidden text-4xl sm:text-5xl mb-8" 
          data-aos="zoom-y-out"
        >
          <h1 
            class="font-dancing-script text-6xl sm:text-7xl"
            style="background: linear-gradient(to right, #c084fc, #818cf8, #38bdf8);
                   -webkit-background-clip: text;
                   -webkit-text-fill-color: transparent;
                   background-clip: text;"
          >
            Fills Ai
          </h1>
        </div>

        <!-- Desktop View (Hidden on mobile) -->
        <div 
          class="hidden md:block text-6xl lg:text-7xl xl:text-8xl mb-8" 
          data-aos="zoom-y-out"
        >
          <svg class="handwriting mx-auto" viewBox="0 0 600 200">
            <defs>
              <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" stop-color="#c084fc" />
                <stop offset="50%" stop-color="#818cf8" />
                <stop offset="100%" stop-color="#38bdf8" />
              </linearGradient>
            </defs>
            <text text-anchor="middle" x="300" y="150" class="text-path">Fills Ai</text>
          </svg>
        </div>

        <!-- Main Title -->
        <h1 
          class="text-4xl md:text-5xl font-extrabold leading-tighter tracking-tighter mb-4" 
          data-aos="zoom-y-out"
          style="background: linear-gradient(to right, #c084fc, #818cf8, #38bdf8);
                 -webkit-background-clip: text;
                 -webkit-text-fill-color: transparent;
                 background-clip: text;"
        >
          {home.title}
        </h1>
        <div class="max-w-3xl mx-auto">
          <p class="text-xl text-gray-400 mb-8" data-aos="zoom-y-out" data-aos-delay="150">
            {home.description}
          </p>
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center w-full">
              <!-- Free Consultation Button -->
              <a 
                  href="#contact" 
                  class="group relative w-full sm:w-auto p-4 bg-gray-900/50 backdrop-blur-sm rounded-xl 
                  border border-gray-800/50 hover:border-purple-500/50 transition-all duration-300 
                  hover:shadow-[0_0_30px_-12px_rgba(168,85,247,0.5)]
                  flex items-center justify-center gap-4"
              >
                  <div class="flex-1 text-center sm:text-left">
                      <span class="text-xl font-bold text-white group-hover:text-purple-400 transition-colors">
                          Free Consultation
                      </span>
                  </div>
                  <div class="opacity-0 group-hover:opacity-100 transition-all duration-300">
                      <svg 
                          xmlns="http://www.w3.org/2000/svg" 
                          width="20" 
                          height="20" 
                          viewBox="0 0 24 24" 
                          fill="none" 
                          stroke="currentColor" 
                          stroke-width="2" 
                          stroke-linecap="round" 
                          stroke-linejoin="round" 
                          class="text-purple-400"
                      >
                          <path d="M5 12h14"></path>
                          <path d="m12 5 7 7-7 7"></path>
                      </svg>
                  </div>
              </a>

              <!-- Learn More Button -->
              <a 
                  href="#features" 
                  class="group relative w-full sm:w-auto p-4 bg-gray-900/50 backdrop-blur-sm rounded-xl 
                  border border-gray-800/50 hover:border-purple-500/50 transition-all duration-300 
                  hover:shadow-[0_0_30px_-12px_rgba(168,85,247,0.5)]
                  flex items-center justify-center gap-4"
              >
                  <div class="flex-1 text-center sm:text-left">
                      <span class="text-xl font-bold text-white group-hover:text-purple-400 transition-colors">
                          Learn More
                      </span>
                  </div>
                  <div class="opacity-0 group-hover:opacity-100 transition-all duration-300">
                      <svg 
                          xmlns="http://www.w3.org/2000/svg" 
                          width="20" 
                          height="20" 
                          viewBox="0 0 24 24" 
                          fill="none" 
                          stroke="currentColor" 
                          stroke-width="2" 
                          stroke-linecap="round" 
                          stroke-linejoin="round" 
                          class="text-purple-400"
                      >
                          <path d="M5 12h14"></path>
                          <path d="m12 5 7 7-7 7"></path>
                      </svg>
                  </div>
              </a>
          </div>
        </div>
      </div>

      <!-- Stats -->
      {home.stats && (
        <div class="max-w-3xl mx-auto mt-12">
          <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
            {home.stats.map((stat) => (
              <div class="text-center">
                <div class="text-3xl font-bold" style="background: linear-gradient(to right, #60a5fa, #3b82f6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                  {stat.value}
                </div>
                <div class="text-sm text-gray-400">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<style>
    @font-face {
        font-family: 'Dancing Script';
        src: url('/fonts/DancingScript-Bold.woff2') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
    }

    .handwriting {
        width: 100%;
        height: auto;
        max-width: 800px;
    }

    .text-path {
        font-family: 'Dancing Script', cursive;
        font-size: 120px;
        fill: none;
        stroke: url(#gradient);
        stroke-width: 2;
        stroke-dasharray: 900;
        stroke-dashoffset: 900;
        animation: write 6s ease forwards;
    }

    @keyframes write {
        to {
            stroke-dashoffset: 0;
        }
    }

    /* Mobile text animation */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fadeIn 2s ease-out forwards;
    }

    /* Font loading for mobile view */
    @font-face {
        font-family: 'Cal Sans';
        src: url('/fonts/CalSans-SemiBold.woff2') format('woff2');
        font-weight: 600;
        font-style: normal;
        font-display: swap;
    }

    .font-cal {
        font-family: 'Cal Sans', sans-serif;
    }

    .writing-animation {
        position: relative;
        width: fit-content;
        margin: 0 auto;
    }

    .writing-animation::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
        height: 100%;
        background: #000;
        animation: writeText 2s steps(7) forwards;
    }

    .writing-animation::after {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 2px;
        height: 100%;
        background: #a855f7;
        animation: cursorBlink 0.8s steps(2) infinite,
                   writeText 2s steps(7) forwards;
    }

    @keyframes writeText {
        to {
            width: 0;
        }
    }

    @keyframes cursorBlink {
        0%, 100% {
            opacity: 0;
        }
        50% {
            opacity: 1;
        }
    }

    @keyframes slideUp {
        0% {
            transform: translateY(100%);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }

    .animate-fade-in {
        animation: fadeIn 0.5s ease-out forwards;
    }

    .animate-slide-up {
        opacity: 0;
        animation: slideUp 0.5s ease-out forwards;
    }

    .animation-delay-100 { animation-delay: 0.1s; }
    .animation-delay-200 { animation-delay: 0.2s; }
    .animation-delay-300 { animation-delay: 0.3s; }
    .animation-delay-400 { animation-delay: 0.4s; }
    .animation-delay-500 { animation-delay: 0.5s; }
    .animation-delay-600 { animation-delay: 0.6s; }
    .animation-delay-700 { animation-delay: 0.7s; }

    @media (max-width: 640px) {
        .text-2xl {
            font-size: 1.5rem;
        }
    }

    @media (min-width: 641px) and (max-width: 768px) {
        .sm\:text-3xl {
            font-size: 1.875rem;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        .md\:text-4xl {
            font-size: 2.25rem;
        }
    }

    @media (min-width: 1025px) {
        .lg\:text-5xl {
            font-size: 3rem;
        }
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(-10px, 10px); }
    }

    @keyframes gradient-x {
        0%, 100% { background-size: 200% 100%; background-position: left center; }
        50% { background-position: right center; }
    }

    @keyframes fade-up {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    .animate-gradient-x {
        animation: gradient-x 15s ease infinite;
    }

    .animate-float {
        animation: float 8s ease-in-out infinite;
    }

    .animate-fade-up {
        animation: fade-up 1s ease forwards;
    }

    .animation-delay-1000 {
        animation-delay: 1000ms;
    }

    div {
        perspective: 1000px;
    }
    
    a {
        transform: translateZ(0);
        transition: transform 0.3s ease;
    }
    
    a:hover {
        transform: translateZ(20px);
    }

    /* Mobile-optimized text path */
    .text-path-mobile {
        font-family: 'Dancing Script', cursive;
        font-size: 80px;
        fill: none;
        stroke: url(#gradient-mobile);
        stroke-width: 2;
        stroke-dasharray: 500;
        stroke-dashoffset: 500;
        animation: write 3s ease forwards;
    }

    @media (max-width: 640px) {
        .handwriting {
            max-width: 100%;
            height: auto;
        }
        
        .text-path-mobile {
            font-size: 60px;
            stroke-width: 1.5;
        }
    }

    .font-dancing-script {
        font-family: 'Dancing Script', cursive;
    }
</style>

<svg width="0" height="0">
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#c084fc" />
      <stop offset="50%" stop-color="#818cf8" />
      <stop offset="100%" stop-color="#38bdf8" />
    </linearGradient>
  </defs>
</svg>
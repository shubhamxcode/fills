---
import { Icon } from 'astro-icon/components';
const currentYear = new Date().getFullYear();
---

<footer class="fixed bottom-4 sm:bottom-8 left-1/2 -translate-x-1/2 z-50 w-[95%] sm:w-auto">
    <div class="relative">
        <div class="absolute inset-0 bg-gray-900/80 backdrop-blur-xl rounded-2xl border border-gray-800/50"></div>
        <div class="relative px-4 sm:px-8 py-2 sm:py-1">
            <div class="flex flex-wrap sm:flex-nowrap items-center justify-center sm:justify-start gap-3 sm:gap-6">
                <!-- GitHub -->
                <a 
                    href="https://github.com/mhhnr" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-full hover:bg-gray-800/50 transition-all duration-300"
                >
                    <div class="absolute -bottom-10 scale-0 group-hover:scale-100 transition-transform">
                        <div class="bg-gray-900 text-white text-xs sm:text-sm px-2 sm:px-3 py-1 rounded-md whitespace-nowrap">GitHub</div>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="text-gray-400 group-hover:text-white group-hover:scale-110 transition-all duration-300 sm:w-6 sm:h-6">
                        <path fill="currentColor" d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"/>
                    </svg>
                </a>

                <!-- LinkedIn -->
                <a 
                    href="https://linkedin.com/in/mhhnr" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-full hover:bg-gray-800/50 transition-all duration-300"
                >
                    <div class="absolute -bottom-10 scale-0 group-hover:scale-100 transition-transform">
                        <div class="bg-gray-900 text-white text-xs sm:text-sm px-2 sm:px-3 py-1 rounded-md whitespace-nowrap">LinkedIn</div>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="text-gray-400 group-hover:text-white group-hover:scale-110 transition-all duration-300 sm:w-6 sm:h-6">
                        <path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77Z"/>
                    </svg>
                </a>

                <!-- Twitter/X -->
                <a 
                    href="https://twitter.com/mhhnry" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-full hover:bg-gray-800/50 transition-all duration-300"
                >
                    <div class="absolute -bottom-10 scale-0 group-hover:scale-100 transition-transform">
                        <div class="bg-gray-900 text-white text-xs sm:text-sm px-2 sm:px-3 py-1 rounded-md whitespace-nowrap">Twitter</div>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="text-gray-400 group-hover:text-white group-hover:scale-110 transition-all duration-300 sm:w-6 sm:h-6">
                        <path fill="currentColor" d="M18.205 2.25h3.308l-7.227 8.26l8.502 11.24H16.13l-5.214-6.817L4.95 21.75H1.64l7.73-8.835L1.215 2.25H8.04l4.713 6.231l5.45-6.231Zm-1.161 17.52h1.833L7.045 4.126H5.078L17.044 19.77Z"/>
                    </svg>
                </a>

                <!-- YouTube -->
                <a 
                    href="https://youtube.com/@hariharanithin" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-full hover:bg-gray-800/50 transition-all duration-300"
                >
                    <div class="absolute -bottom-10 scale-0 group-hover:scale-100 transition-transform">
                        <div class="bg-gray-900 text-white text-xs sm:text-sm px-2 sm:px-3 py-1 rounded-md whitespace-nowrap">YouTube</div>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="text-gray-400 group-hover:text-white group-hover:scale-110 transition-all duration-300 sm:w-6 sm:h-6">
                        <path fill="currentColor" d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0C.488 3.45.029 5.804 0 12c.029 6.185.484 8.549 4.385 8.816c3.6.245 11.626.246 15.23 0C23.512 20.55 23.971 18.196 24 12c-.029-6.185-.484-8.549-4.385-8.816zM9 16V8l8 3.993L9 16z"/>
                    </svg>
                </a>

                <!-- Instagram -->
                <a 
                    href="https://instagram.com/nithin_manupati" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-full hover:bg-gray-800/50 transition-all duration-300"
                >
                    <div class="absolute -bottom-10 scale-0 group-hover:scale-100 transition-transform">
                        <div class="bg-gray-900 text-white text-xs sm:text-sm px-2 sm:px-3 py-1 rounded-md whitespace-nowrap">Instagram</div>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="text-gray-400 group-hover:text-white group-hover:scale-110 transition-all duration-300 sm:w-6 sm:h-6">
                        <path fill="currentColor" d="M12 2c2.717 0 3.056.01 4.122.06c1.065.05 1.79.217 2.428.465c.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428c.047 1.066.06 1.405.06 4.122c0 2.717-.01 3.056-.06 4.122c-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772a4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465c-1.066.047-1.405.06-4.122.06c-2.717 0-3.056-.01-4.122-.06c-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153a4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122c.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10a5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 0 0-2.5 0a1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6a3 3 0 0 1 0-6z"/>
                    </svg>
                </a>

                <!-- Hugging Face -->
                <a 
                    href="https://huggingface.co/mhhnr" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group relative flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-full hover:bg-gray-800/50 transition-all duration-300"
                >
                    <div class="absolute -bottom-10 scale-0 group-hover:scale-100 transition-transform">
                        <div class="bg-gray-900 text-white text-xs sm:text-sm px-2 sm:px-3 py-1 rounded-md whitespace-nowrap">Hugging Face</div>
                    </div>
                    <Icon 
                        name="hf-logo" 
                        class="w-5 h-5 text-gray-400 group-hover:text-white group-hover:scale-110 transition-all duration-300 sm:w-6 sm:h-6"
                    />
                </a>

                <!-- Copyright -->
                <div class="w-full sm:w-auto text-center sm:text-left text-xs sm:text-sm text-gray-400 font-medium px-2 sm:px-4 pt-2 sm:pt-0 border-t sm:border-t-0 sm:border-l border-gray-700">
                    <span>{currentYear}</span>
                    <span class="ml-1 font-cal bg-gradient-to-r from-orange-500 via-purple-500 to-blue-500 bg-clip-text text-transparent">
                        Nithin Manupati
                    </span>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    @keyframes scaleUp {
        0% { transform: scale(0.8); opacity: 0; }
        100% { transform: scale(1); opacity: 1; }
    }

    .scale-up {
        animation: scaleUp 0.2s ease-out forwards;
    }

    @media (max-width: 640px) {
        .absolute.-bottom-10 {
            bottom: -8px;
        }
    }
</style>

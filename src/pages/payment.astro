---
import Layout from '../layouts/Layout.astro';
import PhonePeCheckout from '../components/PhonePeCheckout.svelte';

// Get amount from query parameter
const amountStr = Astro.url.searchParams.get('amount') || '100';
const amount = parseInt(amountStr, 10) || 100;
---

<Layout title="Payment - FILLS AI Consultancy">
  <main class="relative min-h-screen overflow-hidden py-12 pt-24">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4"
            style="background: linear-gradient(to right, #c084fc, #818cf8, #38bdf8);
                   -webkit-background-clip: text;
                   -webkit-text-fill-color: transparent;
                   background-clip: text;">
          Payment Gateway
        </h1>
        <p class="text-lg text-gray-400">
          Powered by <span class="font-semibold text-purple-400">PhonePe</span>
        </p>
      </div>

      <!-- Payment Component -->
      <div class="max-w-lg mx-auto">
        <PhonePeCheckout client:load defaultAmount={amount} />
      </div>

      <!-- Information Section -->
      <div class="max-w-4xl mx-auto mt-16 grid md:grid-cols-3 gap-6">
        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-800/50">
          <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Secure Payments</h3>
          <p class="text-sm text-gray-400">
            All transactions are encrypted and secured by PhonePe's industry-leading payment gateway.
          </p>
        </div>

        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-800/50">
          <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Instant Processing</h3>
          <p class="text-sm text-gray-400">
            Lightning-fast payment processing with real-time status updates and notifications.
          </p>
        </div>

        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-800/50">
          <div class="w-12 h-12 bg-purple-500/20 rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Multiple Options</h3>
          <p class="text-sm text-gray-400">
            We support all major payment methods including UPI, Cards, Net Banking, and Wallets.
          </p>
        </div>
      </div>

      <!-- Back to Home -->
      <div class="text-center mt-12">
        <a 
          href="/" 
          class="inline-flex items-center gap-2 px-6 py-3 bg-gray-800 text-gray-300 hover:text-white font-semibold rounded-lg border border-gray-700 hover:border-gray-600 transition-all"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </main>
</Layout>

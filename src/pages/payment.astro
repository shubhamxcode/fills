                    <span class="text-gray-500">Test Card:</span>
                    <span class="text-purple-400 ml-2">4208 5851 9011 6667</span>
                  </div>
                  <div>
                    <span class="text-gray-500">Expiry:</span>
                    <span class="text-purple-400 ml-2">06/2027</span>
                  </div>
                  <div>
                    <span class="text-gray-500">CVV:</span>
                    <span class="text-purple-400 ml-2">508</span>
                  </div>
                  <div>
                    <span class="text-gray-500">OTP:</span>
                    <span class="text-purple-400 ml-2">123456</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Back to Home -->
      <div class="text-center mt-12">
        <a 
          href="/" 
          class="inline-flex items-center gap-2 px-6 py-3 bg-gray-800 text-gray-300 hover:text-white font-semibold rounded-lg border border-gray-700 hover:border-gray-600 transition-all"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </main>
</Layout>

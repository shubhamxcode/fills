---
import Layout from '../layouts/Layout.astro';
import PhonePeCheckout from '../components/PhonePeCheckout.svelte';
---

<Layout title="Payment - FILLS AI Consultancy">
  <main class="relative min-h-screen overflow-hidden py-12 pt-24">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4"
            style="background: linear-gradient(to right, #c084fc, #818cf8, #38bdf8);
                   -webkit-background-clip: text;
                   -webkit-text-fill-color: transparent;
                   background-clip: text;">
          Payment Gateway
        </h1>
        <p class="text-lg text-gray-400">
          Powered by <span class="font-semibold text-purple-400">PhonePe</span>
        </p>
        <div class="mt-4 inline-block px-4 py-2 bg-yellow-900/30 border border-yellow-600/50 rounded-lg">
          <p class="text-sm text-yellow-200 font-medium flex items-center gap-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Running in UAT Sandbox Mode
          </p>
        </div>
      </div>

      <!-- Payment Component -->
      <div class="max-w-lg mx-auto">
        <PhonePeCheckout client:load defaultAmount={100} />
      </div>

      <!-- Information Section -->
      <div class="max-w-4xl mx-auto mt-16 grid md:grid-cols-3 gap-6">
        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-800/50">
          <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Secure Payments</h3>
          <p class="text-sm text-gray-400">
            All transactions are encrypted and secured by PhonePe's payment gateway
          </p>
        </div>

        <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-gray-800/50">

---
import Layout from '../layouts/Layout.astro';

// Company Information - Update these values
const companyInfo = {
    name: "FILLS AI CONSULTANCY",
    legalName: "FILLS AI CONSULTANCY",
    website: "https://www.fills.ai",
    email: "nithin@fills.ai",
    address: "Narsapur, Medak, Telangana - 502306, India",
    state: "Telangana",
    country: "India",
    grievanceOfficer: {
        name: "Nithin Manupati",
        email: "grievanceofficer@fills.ai",
        designation: "Grievance Officer"
    },
    effectiveDate: "December 20, 2024",
    lastUpdated: "December 20, 2024"
};
---

<Layout title="Return Policy - FILLS AI CONSULTANCY">
    <main class="relative min-h-screen overflow-hidden">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 pt-32">
            <div class="bg-gray-900/50 backdrop-blur-sm rounded-2xl border border-gray-800/50 p-8 md:p-12">
                <h1 class="text-4xl font-bold text-center mb-4" 
                    style="background: linear-gradient(to right, #c084fc, #818cf8, #38bdf8);
                           -webkit-background-clip: text;
                           -webkit-text-fill-color: transparent;
                           background-clip: text;">
                    Return Policy
                </h1>
                
                <p class="text-center text-gray-400 mb-8">
                    Effective Date: {companyInfo.effectiveDate} | Last Updated: {companyInfo.lastUpdated}
                </p>

                <div class="prose prose-invert max-w-none">
                    <div class="text-gray-300 space-y-6">
                        
                        <!-- Company Information Banner -->
                        <div class="bg-purple-900/30 border border-purple-600/30 rounded-lg p-6 mb-8">
                            <h2 class="text-xl font-bold text-white mb-3">Merchant Information</h2>
                            <div class="grid md:grid-cols-2 gap-4 text-sm">
                                <div>
                                    <p><strong class="text-purple-300">Legal Entity:</strong> {companyInfo.legalName}</p>
                                    <p><strong class="text-purple-300">Website:</strong> <a href={companyInfo.website} class="text-purple-400 hover:text-purple-300">{companyInfo.website}</a></p>
                                </div>
                                <div>
                                    <p><strong class="text-purple-300">Email:</strong> <a href={`mailto:${companyInfo.email}`} class="text-purple-400 hover:text-purple-300">{companyInfo.email}</a></p>
                                    <p><strong class="text-purple-300">Address:</strong> {companyInfo.address}</p>
                                </div>
                            </div>
                        </div>

                        <!-- Digital Services Notice -->
                        <div class="bg-blue-900/20 border-l-4 border-blue-500 rounded-r-lg p-6 mb-8">
                            <div class="flex items-start gap-3">
                                <svg class="w-6 h-6 text-blue-400 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                                </svg>
                                <div>
                                    <h3 class="text-lg font-bold text-blue-300 mb-2">Digital Services Business</h3>
                                    <p class="text-blue-100 mb-2">
                                        <strong>{companyInfo.name}</strong> provides <strong>100% digital services only</strong>:
                                    </p>
                                    <ul class="list-disc pl-5 space-y-1 text-blue-200 text-sm">
                                        <li>Software Consulting (remote advisory services)</li>
                                        <li>SaaS Development (cloud-based software)</li>
                                        <li>Healthcare AI Agents (digital deployment)</li>
                                    </ul>
                                    <p class="text-blue-100 mt-3 text-sm">
                                        <strong>No physical products are sold.</strong> This policy addresses service adjustments and project remediation only.
                            </p>
                                </div>
                            </div>
                        </div>


                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">1. Return/Exchange Window</h2>
                            <p class="mb-4">
                                We offer returns or exchanges within <strong class="text-white">7 days from the date of purchase/delivery</strong>, subject to the conditions outlined in this policy.
                            </p>
                            <div class="bg-gray-800/50 rounded-lg p-6 border border-gray-700">
                                <h3 class="text-xl font-bold text-purple-300 mb-4">Return Timeline Summary</h3>
                                <ul class="space-y-2">
                                    <li><strong class="text-white">Return Window:</strong> 7 days from date of purchase/delivery</li>
                                    <li><strong class="text-white">Request Review:</strong> 2-3 business days</li>
                                    <li><strong class="text-white">Exchange Processing:</strong> 5-7 business days after approval</li>
                                    <li><strong class="text-white">Refund Processing:</strong> As per our <a href="/refund-policy" class="text-purple-400 hover:text-purple-300">Refund Policy</a></li>
                                </ul>
                            </div>
                        </section>

                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">2. Eligibility for Returns/Exchanges</h2>
                            
                            <div class="space-y-4">
                                <div class="border-l-4 border-green-500 pl-4">
                                    <h3 class="text-lg font-bold text-green-300 mb-2">2.1 Eligible for Service Remediation/Exchange</h3>
                                    <ul class="list-disc pl-6 space-y-2">
                                        <li>
                                            <strong>Service Errors:</strong> Services that were not delivered as per the agreed specifications
                                        </li>
                                        <li>
                                            <strong>Technical Issues:</strong> Service delivery prevented due to technical issues on our end
                                        </li>
                                        <li>
                                            <strong>Duplicate Purchases:</strong> Accidental duplicate orders (before service delivery)
                                        </li>
                                        <li>
                                            <strong>Service Quality Issues:</strong> Deliverables that don't meet the agreed quality standards
                                        </li>
                                    </ul>
                                </div>

                                <div class="border-l-4 border-red-500 pl-4">
                                    <h3 class="text-lg font-bold text-red-300 mb-2">2.2 NOT Eligible for Return/Exchange</h3>
                                    <ul class="list-disc pl-6 space-y-2 text-red-100">
                                        <li>
                                            <strong>Completed Services:</strong> AI consulting services that have been delivered
                                        </li>
                                        <li>
                                            <strong>Downloaded/Accessed Digital Products:</strong> Software, reports, or documentation that have been downloaded or accessed
                                        </li>
                                        <li>
                                            <strong>Custom Development:</strong> Bespoke AI solutions developed as per your specifications
                                        </li>
                                        <li>
                                            <strong>Training Sessions:</strong> Completed workshops, training, or consultation calls
                                        </li>
                                        <li>
                                            <strong>API/License Keys:</strong> Products where API keys or license keys have been issued and activated
                                        </li>
                                        <li>
                                            <strong>Third-Party Products:</strong> Products purchased from third-party vendors through our platform
                                        </li>
                                        <li>
                                            <strong>Promotional Items:</strong> Products purchased under special promotions or clearance sales (unless defective)
                                        </li>
                                        <li>
                                            <strong>Items Past Return Window:</strong> Any product or service where the 7-day return window has expired
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </section>

                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">3. Conditions for Service Remediation</h2>
                            
                            <div class="bg-gray-800/50 rounded-lg p-6 border border-gray-700">
                                <p class="mb-4">For eligible service remediation requests:</p>
                                <ul class="list-disc pl-6 space-y-3">
                                    <li>
                                        <strong class="text-white">Timely Reporting:</strong> Issues must be reported within 7 days of service delivery
                                    </li>
                                    <li>
                                        <strong class="text-white">Proof of Purchase:</strong> You must have the original invoice or order confirmation
                                    </li>
                                    <li>
                                        <strong class="text-white">Specific Issues:</strong> Clearly document the issues or discrepancies
                                    </li>
                                    <li>
                                        <strong class="text-white">Good Faith:</strong> Requests made in good faith for legitimate service quality concerns
                                    </li>
                                </ul>
                            </div>
                        </section>

                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">4. How to Initiate a Return/Exchange</h2>
                            
                            <div class="bg-purple-900/20 border border-purple-600/30 rounded-lg p-6">
                                <h3 class="text-xl font-bold text-purple-300 mb-4">Step-by-Step Process</h3>
                                <ol class="list-decimal pl-6 space-y-3">
                                    <li>
                                        <strong class="text-white">Contact Us:</strong> Email <a href={`mailto:${companyInfo.email}`} class="text-purple-400 hover:text-purple-300">{companyInfo.email}</a> with subject line "Return/Exchange Request - [Order ID]"
                                    </li>
                                    <li>
                                        <strong class="text-white">Provide Details:</strong>
                                        <ul class="list-disc pl-6 mt-2 space-y-1 text-gray-300">
                                            <li>Order ID/Transaction ID</li>
                                            <li>Registered email address</li>
                                            <li>Service name and delivery date</li>
                                            <li>Specific concerns or issues encountered</li>
                                            <li>Documentation or evidence of service quality issues</li>
                                            <li>Preferred resolution (service correction or refund)</li>
                                        </ul>
                                    </li>
                                    <li>
                                        <strong class="text-white">Await Review:</strong> Our team will review your request within 2-3 business days
                                    </li>
                                    <li>
                                        <strong class="text-white">Quality Assessment:</strong> We will review the service delivery against agreed specifications
                                    </li>
                                    <li>
                                        <strong class="text-white">Resolution:</strong> After verification, we will process your service correction or refund as appropriate
                                    </li>
                                </ol>
                            </div>
                        </section>

                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">5. Service Remediation Process</h2>
                            
                            <div class="space-y-4">
                                <div class="border-l-4 border-purple-500 pl-4">
                                    <h3 class="text-lg font-bold text-white mb-2">5.1 For Service Quality Issues</h3>
                                    <p class="mb-2">If services do not meet agreed specifications:</p>
                                    <ul class="list-disc pl-6 space-y-1">
                                        <li>Report within 7 days of service delivery with specific concerns</li>
                                        <li>We will review and offer remediation, re-delivery, or credit as appropriate</li>
                                        <li>Resolution timeline will be communicated based on the complexity of the issue</li>
                                        <li>No additional charges for service correction when the issue is on our end</li>
                                    </ul>
                                </div>

                                <div class="border-l-4 border-purple-500 pl-4">
                                    <h3 class="text-lg font-bold text-white mb-2">5.2 Service Upgrades</h3>
                                    <p>You may upgrade to a higher service tier at any time. The price difference will be calculated based on the remaining service period or unused credits.</p>
                                </div>
                            </div>
                        </section>


                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">6. Quality Review Process</h2>
                            <p class="mb-4">Upon receiving a service remediation request, our quality assurance team will:</p>
                            <ul class="list-disc pl-6 space-y-2">
                                <li>Review the service delivery and reported issues</li>
                                <li>Confirm eligibility based on service agreement terms</li>
                                <li>Document findings and proposed resolution</li>
                                <li>Notify you of the outcome within 2-3 business days</li>
                            </ul>
                        </section>

                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">7. Refund After Service Remediation</h2>
                            <p class="mb-4">
                                If you are eligible for a refund after service review:
                            </p>
                            <ul class="list-disc pl-6 space-y-2">
                                <li>Refunds are processed within 5-7 business days after completing our review</li>
                                <li>Refunds are credited to the original payment method via <strong>PhonePe Payment Gateway</strong></li>
                                <li>Please refer to our <a href="/refund-policy" class="text-purple-400 hover:text-purple-300">Refund Policy</a> for complete details</li>
                            </ul>
                        </section>

                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">9. Late or Missing Exchanges</h2>
                            <div class="bg-yellow-900/20 border border-yellow-600/30 rounded-lg p-6">
                                <p class="text-yellow-200 mb-3">If you haven't received your exchange/refund within the expected timeframe:</p>
                                <ol class="list-decimal pl-6 space-y-2 text-yellow-100">
                                    <li>Check your email (including spam folder) for our communications</li>
                                    <li>Verify the return tracking shows delivery to our address</li>
                                    <li>For refunds, check with your bank or card issuer (processing may take additional time)</li>
                                    <li>Contact us at <a href={`mailto:${companyInfo.email}`} class="text-yellow-300 hover:text-yellow-200">{companyInfo.email}</a> with your return tracking number</li>
                                </ol>
                            </div>
                        </section>

                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">10. Contact Information</h2>
                            <div class="bg-purple-900/20 border border-purple-600/30 rounded-lg p-6">
                                <h3 class="text-xl font-bold text-white mb-4">For Return/Exchange Requests</h3>
                                
                                <div class="grid md:grid-cols-2 gap-6">
                                    <div>
                                        <h4 class="font-bold text-purple-300 mb-2">Customer Support</h4>
                                        <p class="mb-1"><strong>Company:</strong> {companyInfo.name}</p>
                                        <p class="mb-1"><strong>Email:</strong> <a href={`mailto:${companyInfo.email}`} class="text-purple-400 hover:text-purple-300">{companyInfo.email}</a></p>
                                        <p class="mb-1"><strong>Address:</strong> {companyInfo.address}</p>
                                        <p class="mb-1"><strong>Website:</strong> <a href={companyInfo.website} class="text-purple-400 hover:text-purple-300">{companyInfo.website}</a></p>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-purple-300 mb-2">Grievance Officer</h4>
                                        <p class="mb-1"><strong>Name:</strong> {companyInfo.grievanceOfficer.name}</p>
                                        <p class="mb-1"><strong>Designation:</strong> {companyInfo.grievanceOfficer.designation}</p>
                                        <p class="mb-1"><strong>Email:</strong> <a href={`mailto:${companyInfo.grievanceOfficer.email}`} class="text-purple-400 hover:text-purple-300">{companyInfo.grievanceOfficer.email}</a></p>
                                        <p class="text-sm text-gray-400 mt-2">Response Time: Within 48 hours on business days</p>
                                    </div>
                                </div>
                                
                                <p class="text-sm text-gray-400 mt-4">
                                    <strong>Business Hours:</strong> Monday - Friday, 9:00 AM - 6:00 PM IST
                                </p>
                            </div>
                        </section>

                        <section>
                            <h2 class="text-2xl font-bold text-white mb-4">11. Related Policies</h2>
                            <p class="mb-4">Please also review our other policies:</p>
                            <ul class="list-disc pl-6 space-y-2">
                                <li><a href="/refund-policy" class="text-purple-400 hover:text-purple-300">Refund and Cancellation Policy</a></li>
                                <li><a href="/shipping-policy" class="text-purple-400 hover:text-purple-300">Shipping/Delivery Policy</a></li>
                                <li><a href="/terms-and-conditions" class="text-purple-400 hover:text-purple-300">Terms and Conditions</a></li>
                                <li><a href="/privacy-policy" class="text-purple-400 hover:text-purple-300">Privacy Policy</a></li>
                            </ul>
                        </section>

                        <div class="mt-12 pt-6 border-t border-gray-700">
                            <p class="text-sm text-gray-400 text-center">
                                Last Updated: {companyInfo.lastUpdated}
                            </p>
                            <p class="text-xs text-gray-500 text-center mt-2">
                                Â© {new Date().getFullYear()} {companyInfo.name}. All rights reserved.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    .prose p {
        margin-bottom: 1rem;
        line-height: 1.75;
    }

    .prose h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    .prose h3 {
        margin-top: 1rem;
        margin-bottom: 0.5rem;
    }

    .prose a {
        transition: color 0.2s;
    }

    .prose a:hover {
        text-decoration: underline;
    }

    .prose ul, .prose ol {
        margin-bottom: 1rem;
    }

    .prose li {
        line-height: 1.75;
    }
</style>

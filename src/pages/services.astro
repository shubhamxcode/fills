---
import Layout from '../layouts/Layout.astro';
import Chat from '../components/Services/Chat';
import Background from '../components/ui/Background.astro';
---

<Layout title="Services">
    <Background />
    <main class="relative min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 pt-32">
            <h1 class="text-4xl font-bold text-center text-white mb-12">
                Our Services
            </h1>
            <div class="grid gap-8">
                <Chat client:load />
            </div>
        </div>
    </main>
</Layout>
